@using Microsoft.AspNetCore.Identity
@using TicketSystem.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="navbar-nav ml-auto">
    @if (SignInManager.IsSignedIn(User))
    {
        <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-page="/Account/Manage/Index" title="Manage">Hello  @UserManager.GetUserName(User)!</a>
                </li>
                <li class="nav-item">
                    <button type="submit" class="nav-link btn btn-link navbar-btn navbar-link">Log out</button>
                </li>
            </ul>
        </form>
    }
    else
    {
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" asp-page="/Account/Register">Register</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-page="/Account/Login">Log in</a>
            </li>
        </ul>
    }
</div>