@page "{id:int}"
@model TicketSystem.Pages.Tickets.TicketConverterModel
@{
    ViewData["Title"] = "TicketConverter";
}

<br />
<div class="col-md-12 content-about">
    <form method="post">
        <div class="col-md-4 pull-left">
            <div class="form-group">
                <label>Requestor:</label>
                <input asp-for="Input.TicketRequestor" class="form-control" type="email" value="@Model.MailTicket.Requestor">
            </div>
            <div class="form-group">
                <label>Subject:</label>
                <input asp-for="Input.TicketSubject" class="form-control" required value="@Model.MailTicket.Subject" />
            </div>
            <div class="form-group">
                <label> Product: </label>
                <select class="form-control" asp-for="Input.TicketProduct" asp-items="Html.GetEnumSelectList<Models.Product>()"></select>
            </div>
            <div class="form-group">
                <label> Priority: </label>
                <select class="form-control" asp-for="Input.TicketPriority" asp-items="Html.GetEnumSelectList<Models.Priority>()"></select>
            </div>
            <div class="form-group">
                <label>Details:</label>
                <textarea asp-for="Input.TicketDetails" id="summernote" required>
                     @Model.MailTicket.Body
                </textarea>

            </div>
            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="Input.Delete" checked id="defaultCheck1">
                    <label class="form-check-label" for="defaultCheck1">
                        Delete Mail?
                    </label>
                </div>
            </div>
            <div class="form-group">
                <button class="btn btn-sm btn-primary btn-create" type="submit" asp-page-handler="Create" value="Create"><span class="fa fa-plus"></span> Create ticket</button>
            </div>
        </div>
    </form>
    <div class="col-md-4 pull-right" style="margin-right: 5%">
        <div class="form-group">
            <label>Email Content:</label>
            <div class="input-group" style="border: 1px solid #c9c9c9; border-radius: 5px; padding: 10px;">@Html.Raw(@Model.MailTicket.Body)</div>
        </div>
    </div>
</div>

<div class="row col-md-12">

</div>

@section Scripts {


    <script>
        $(document).ready(function () {
            $('#summernote').summernote({
                height: 100,
                width: 710,
            });
        });
    </script>
}

