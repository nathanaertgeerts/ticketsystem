@page "{id:int}"
@model TicketSystem.Pages.Knowledge.ManageCategoriesModel
@{
    ViewData["Title"] = "Manage Categories";
}

<body>
    <br />
    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-2 sidebar">
                <div class="card card-default">
                    <div class="card-header">
                        <h5><strong>Manage KB</strong></h5>
                    </div>
                    <div class="card-body">
                        <div class="sidebar-sticky">
                            <ul class="nav flex-column">
                                <li class="nav-item">
                                    <a class="nav-link active" asp-page="/Knowledge/ManageArticles">
                                        <span class="fa fa-edit"></span>
                                        Articles
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/Knowledge/ManageKnowledge">
                                        <span class="fa fa-folder"></span>
                                        Categories
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/Knowledge/ManageKnowledge">
                                        <span class="fa fa-cog"></span>
                                        Settings
                                    </a>
                                </li>
                            </ul>
                        </div>

                    </div>
                </div>

            </nav>

            <main role="main" class="col-md-9 ml-sm-auto col-lg-10">

                <div class="card card-default">
                    <div class="card-header">
                        <div class="pull-left">Edit Category</div>
                        <div class="pull-right">
                            <form method="post">
                                <input type="hidden" asp-for="Input.Id" value="@Model.Map.Id" />
                                <button class="fa fa-trash btn btn-primary btn-sm" asp-page-handler="Delete" onclick="return confirm('Are you sure you want to delete this item?');"></button>
                            </form>
                        </div>
                    </div>
                    <div class="card-body col-md-12">
                        <div class="col-md-5 pull-left">
                            <form method="post" class="col-md-7">
                                <div class="form-group">
                                    <label>Title:</label>
                                    <input type="hidden" class="form-control" asp-for="Input.Id" value="@Model.Map.Id" />
                                    <input class="form-control" asp-for="Input.Title" value="@Model.Map.Title" />
                                </div>
                                <button class="btn btn-primary" asp-page-handler="UpdateMap">Edit</button>
                            </form>
                        </div>

                        @*<div class="col-md-6 pull-left">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Article</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var map in Model.MapAndArticles)
                                    {
                                        foreach (var article in map.Articles)
                                        {
                                            <tr>
                                                <td>
                                                    @article.Title
                                                </td>
                                                <td>
                                                    <a asp-page="/Knowledge/ManageArticle" asp-route-id="@article.Id"><span class="fa fa-edit"></span></a>
                                                </td>
                                            </tr>

                                        }
                                    }
                                </tbody>
                            </table>
                        </div>*@
                        <div class="col-md-1 pull-right">

                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>


</body>

